<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swastikijari.brain1.programming">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timer"
        android:layout_margin="4dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timer"
            android:gravity="center"
            android:text="Question 's"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="UnknownId" />
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/scoreupdate"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/finaldisp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/po1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:tag="4"
            android:text="" />

        <Button
            android:id="@+id/po2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"

            android:tag="5"
            android:text="" />

        <Button
            android:id="@+id/po3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:tag="6"
            android:text="" />

        <Button
            android:id="@+id/po4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:tag="7"
            android:text="" />


    </GridLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignRight="@+id/button3"
        android:layout_alignTop="@+id/scoreupdate"
        android:gravity="center"
        android:text=""
        android:textSize="27sp" />


    <TextView
        android:id="@+id/finaldisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/replay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=" "
        android:textColor="@android:color/black"
        android:textSize="29sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/finaldisp"></LinearLayout>

    <Button
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/next"
        android:layout_alignBottom="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="Play Again" />

    <Button
        android:id="@+id/Pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/finaldisp"
        android:text="Pre" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:text="Next" />

</RelativeLayout>


